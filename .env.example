# Storage Configuration
# Choose storage type: 'local' for system storage, 'azure' for Azure cloud, or 'aws' for AWS S3
STORAGE_TYPE=local

# AWS S3 Configuration (only needed if STORAGE_TYPE=aws)
# Get your credentials from AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-bucket-name

# Azure Storage Configuration (only needed if STORAGE_TYPE=azure)
# Get your connection string from Azure Portal -> Storage Account -> Access Keys
AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string_here

# Container name for storing photos (will be created automatically if it doesn't exist)
AZURE_CONTAINER_NAME=photos

# Flask secret key (generate a random secret key for production)
SECRET_KEY=your-secret-key-here-change-in-production

# Port (Render/AWS will set this automatically)
PORT=5000
